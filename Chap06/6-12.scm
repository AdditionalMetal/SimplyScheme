  (cond ((not (equal? 'boxes   (plural 'box)))  '(Failed: box))
	((not (equal? 'buzzes  (plural 'buzz))) '(Failed: buzz))
	((not (equal? 'quizzes (plural 'quiz))) '(Failed: quiz))	
	((not (equal? 'boys    (plural 'boy)))  '(Failed: boy))
	((not (equal? 'babies  (plural 'baby))) '(Failed: baby))		
	(else '(Passed all tests - Hope they were adequate...)))
  )
